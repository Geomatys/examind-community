<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.examind.community</groupId>
    <artifactId>web-services</artifactId>
    <version>1.2.2</version>
  </parent>

  <groupId>com.examind.community</groupId>
  <artifactId>cstl-web-wms</artifactId>
  <packaging>jar</packaging>
  <name>Web service : OGC WMS</name>
  <description>
    HTTP service facade for an OGC Web Map Service (WMS).
  </description>

  <dependencies>
    <dependency>
      <groupId>com.examind.community</groupId>
      <artifactId>cstl-web-map</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit</groupId>
      <artifactId>geotk-xml-wms</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit</groupId>
      <artifactId>geotk-render2d</artifactId>
    </dependency>

    <!-- test dependencies -->
    <dependency>
      <groupId>com.examind.community</groupId>
      <artifactId>cstl-test-embedded</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.examind.community</groupId>
      <artifactId>cstl-test-data</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-engine-process</artifactId>
        <version>${project.version}</version>
        <type>test-jar</type>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-web-map</artifactId>
        <version>${project.version}</version>
        <type>test-jar</type>
        <scope>test</scope>
    </dependency>
    <dependency>
       <groupId>com.examind.community</groupId>
       <artifactId>cstl-test-data</artifactId>
       <version>${project.version}</version>
       <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-database-configuration</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-database-impl</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-engine-admin</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>examind-engine-computed-data</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-engine-spring-security</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>com.examind.community</groupId>
        <artifactId>cstl-store-data-observationstore</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.apache.sis.storage</groupId>
        <artifactId>sis-netcdf</artifactId>
        <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.media</groupId>
      <artifactId>jai_codec</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.media</groupId>
      <artifactId>jai_core</artifactId>
    </dependency>
  </dependencies>

  <build>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-surefire-plugin</artifactId>
              <configuration>
                  <!--
                  HACK: See same section in cstl-web-sos module for explanations.
                  -->
                  <argLine>-Duser.timezone=Europe/Paris</argLine>
                  <systemPropertyVariables>
                      <spring.profiles.active>${spring.profiles.active}</spring.profiles.active>
                  </systemPropertyVariables>
              </configuration>
          </plugin>
      </plugins>
  </build>
</project>
